<h1><%= @restaurant.name %> <%= @restaurant.category %></h1>
  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.phone_number %></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %> <%= link_to "Remove",
      review_path(review), class: "btn btn-danger",
      method: :delete,
      data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>
<%= link_to 'back', restaurants_path, class: "btn btn-outline-primary" %>
<%= link_to 'edit', edit_restaurant_path(@restaurant), class: "btn btn-warning" %>
<%= link_to 'delete', restaurant_path(@restaurant), class: "btn btn-danger",  method: :delete, data: { confirm: 'Are you sure?' } %>
<%= link_to 'Leave a review', new_restaurant_review_path(@restaurant), class: "btn btn-outline-primary" %>
